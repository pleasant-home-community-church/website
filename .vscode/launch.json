{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "python: fetch sermons",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/sermonaudio_fetch.py",
      "args": [
        "--data-dir",
        "${workspaceFolder}/src/data",
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/scripts",
      "justMyCode": false,
    },
    {
      "name": "python: fetch events",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/planningcenter_fetch_events.py",
      "args": [
        "--data-dir",
        "${workspaceFolder}/src/data",
        "--assets-dir",
        "${workspaceFolder}/src/assets",
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/scripts",
      "justMyCode": false,
    },
    {
      "name": "python: fetch ministries",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/planningcenter_fetch_ministries.py",
      "args": [
        "--data-dir",
        "${workspaceFolder}/src/data",
        "--assets-dir",
        "${workspaceFolder}/src/assets",
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/scripts",
      "justMyCode": false,
    },
    {
      "command": "${workspaceFolder}/node_modules/.bin/astro dev",
      "name": "node: Dev Server",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}