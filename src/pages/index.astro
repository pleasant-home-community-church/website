---
import { SITE } from 'astrowind:config';
import { twMerge } from 'tailwind-merge';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import HeroText from '~/components/widgets/HeroText.astro';

import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import { Icon } from 'astro-icon/components';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import Stats2 from '~/components/widgets/Stats2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pleasant Home Community Church',
  ignoreTitleTemplate: true,
};

const address = SITE?.address;
const appleMaps = SITE?.appleMaps;
const googleMaps = SITE?.googleMaps;
const phone = SITE?.phone;
---

<Layout metadata={metadata}>
  <!-- Welcome Widget ******************* -->

  <Content
    isReversed
    image={{
      src: '~/assets/images/phcc-front-building-crop.webp',
      alt: 'Pleasant Home Community Church',
    }}
  >
    <Fragment slot="content">
      <h1 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl lg:text-4xl xl:text-6xl mb-2">
        Welcome!
      </h1><br />
      At Pleasant Home Community Church, we worship our Savior Jesus Christ, study His Word, and enjoy sweet fellowship with
      one another.<br /><br />Established in 1897, we have a long history of Biblical faithfulness which continues today
      through the expository preaching of God's Word.
    </Fragment>
  </Content>

  <!-- Worship Services Widget ******************* -->

  <!-- Location Widget ******************* -->

  <Content
    image={{
      src: '~/assets/images/phcc-apple-maps.png',
      alt: 'Pleasant Home Community Church Location on Map',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Worship Services</h3><br />
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-1xl mb-2">Sunday Morning</h3>
      9:00 am, 10:45 am<br /><br />
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-1xl mb-2">Location</h3>
      <span set:html={address} /><br /><br />
      <a href={appleMaps} target="_blank"><Icon name="tabler:brand-apple" class="w-5 h-5 inline" /></a>
      <a href={googleMaps} target="_blank"><Icon name="tabler:brand-google" class="w-5 h-5 inline" /></a>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- What to Expect Widget ******************* -->

  <Features
    id="features"
    title="What to Expect When You Visit"
    subtitle="When you visit one of our services, you will notice that we like to keep things simple. We are not about flashy church growth strategies or entertaining our members. We are about knowing God, making Him known, and enjoying the common salvation we have with the saints of Christ. We are a church that holds to the inerrancy, infallibility, and sufficiency of Scripture. We invite you to come and worship with us."
    columns={3}
    items={[
      {
        title: 'Friendly Believers',
        description: 'You will be greeted by a friendly group of believers.',
        icon: 'tabler:friends',
      },
      {
        title: 'Worship Music',
        description:
          'Worship will include a mixture of old hymns, modern hymns, and select contemporary worship music.',
        icon: 'tabler:music',
      },
      {
        title: 'Expository Teaching',
        description:
          'The preaching will be expository from the Bible, and you will be challenged, encouraged, and edified.',
        icon: 'tabler:bible',
      },
      {
        title: "Children's Church",
        description: "Children's Church is offered for Nursery (0-2yrs) through 5th grade.",
        icon: 'tabler:monkeybar',
      },
      {
        title: 'Casual Dress',
        description: 'Most members wear casual to dressy-casual attire.',
        icon: 'tabler:shirt-sport',
      },
      {
        title: 'Fellowship',
        description: 'After service, we invite you to stick around and fellowship with one another.',
        icon: 'tabler:heart-handshake',
      },
    ]}
  />
</Layout>
