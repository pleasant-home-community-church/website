---
import Layout from '~/layouts/PageLayout.astro';
import MinistriesList from '~/components/ministries/List.astro';
import Headline from '~/components/ministries/Headline.astro';
// import PostTags from "~/components/ministries/Tags.astro";

import { ministriesListRobots, fetchPosts } from '~/utils/ministries';

export const prerender = true;

const ministries = await fetchPosts();

// const allCategories = await findCategories();
// const allTags = await findTags();

const metadata = {
  title: 'Ministries',
  robots: {
    follow: ministriesListRobots?.follow,
  },
  openGraph: {
    type: 'ministries',
  },
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline>Ministries</Headline>
    <MinistriesList ministries={ministries} />
  </section>
</Layout>
